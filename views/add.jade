- var create_page = true
extends layout
block mainblock
	.row
		.col-md-6.col-md-offset-3
			.panel.panel-primary
				.panel-heading Create a new API
				.panel-body
					if error_msg
						.alert.alert-danger(role='alert')!= error_msg
					else if info_msg
						.alert.alert-info(role='alert')!= info_msg
					form(method='post', action='add-entry', enctype="multipart/form-data")
						.form-group
							label(for='servicename') Service Name
							input#servicename.form-control(type='text', placeholder='employee-data', name='servicename', required)
						.form-group
							label(for='servicefile') File input
							input#servicefile(type='file', name='servicefile', required)
							p.help-block Select JSON, CSV, XML file.
						.form-group
							.radio
								label
									input#optionsRadios1(type='radio', name='csv', value='csv', checked='')
									| CSV file
						.form-group
							label(for='searchid') Search By
							input#searchid.form-control(type='text', placeholder='id, name', name='searchid', required)
						button.btn.btn-primary(type='submit') Create Service
