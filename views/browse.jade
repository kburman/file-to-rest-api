extends layout
block mainblock
	.row
		.col-md-6.col-md-offset-3
			.panel.panel-default
				.panel-heading List of all registered service
				if error_msg
					.alert.alert-danger(role='alert')!= error_msg
				else if info_msg
					.alert.alert-info(role='alert')!= info_msg
				table.table.table-striped.table-hover
					thead
						tr
							th Service name
							th Filetype
							th SearchBy
							th Update File
							th Delete
					tbody
						each itm in servicelst
							- var dellink= './delservice/' + itm._id
							- var updatefile= './update/' + itm._id
							tr
								td= itm.servicename
								td= itm.filetype
								td= itm.searchBy
								td
									a(href= updatefile)
										button.btn.btn-primary(type='button') Upload
								td
									a(href= dellink)
										button.btn.btn-danger(type='button') Delete
